{{#each comments as |comment|}}
  <div class="comment-container">
    <p>{{comment.body}}</p>
    <p>{{comment.name}}</p>
    {{#if showForm}}
      <form>
        <h4>Edit this comment</h4>
        <div class="form-group">
          <label for="update-name">Name:</label>
          {{input value=update-name id="update-name" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="update-body">Comment:</label>
          {{textarea value=update-body id="update-body" class="form-control"}}
        </div>

        <button {{action 'updateComment' comment}} class="btn btn-default">Submit Changes</button>
      </form>
    {{else}}
      <a {{action 'showUpdateForm'}}>edit</a>
    {{/if}}
  </div>
{{/each}}

<h3>Add a Comment</h3>
<form>
  <div class="form-group">
    <label for="name">Name:</label>
    {{input value=name id="name" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="body">Comment:</label>
    {{textarea value=body id="body" class="form-control"}}
  </div>

  <button {{action 'saveComment' post}} class="btn btn-default">Comment</button>
</form>
